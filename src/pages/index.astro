---
import { ArrowUp, Lightbulb, Building, HelpCircle, Mail } from "lucide-astro";
import "../styles/global.css";
import HeroSection from "../components/HeroSection.astro";
import ProductSection from "../components/ProductSection.astro";
import HowItWorksSection from "../components/HowItWorksSection.astro";
import SpecsSection from "../components/SpecsSection.astro";
import AboutSection from "../components/AboutSection.astro";
import TestimonialsSection from "../components/TestimonialsSection.astro";
import FaqSection from "../components/FaqSection.astro";
import ContactSection from "../components/ContactSection.astro";
---

<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>ecoluz - Diseño Moderno con Tailwind CSS</title>
	</head>
	<body class="bg-[#f4f7f9] text-[#2c3e50] font-[Helvetica,Arial,sans-serif] overflow-x-hidden">
		<div class="background-container fixed top-0 left-0 w-full h-full overflow-hidden -z-10">
			<div
				class="blob blob1 absolute w-[500px] h-[500px] bg-[#3498db] rounded-full top-[-200px] left-[-200px] filter blur-3xl opacity-50"
			>
			</div>
			<div
				class="blob blob2 absolute w-[400px] h-[400px] bg-[#f5b7b1] rounded-full bottom-[-150px] right-[-150px] filter blur-3xl opacity-50"
			>
			</div>
			<div
				class="blob blob3 absolute w-[350px] h-[350px] bg-[#fdebd0] rounded-full bottom-[50px] left-[100px] filter blur-3xl opacity-50"
			>
			</div>
		</div>

		<div class="page-wrapper relative z-[2]">
			<header class="sticky top-5 mx-5 z-10">
				<nav class="glass-container cursor-pointer md:cursor-default" id="top-navbar">
					<div class="glass-filter"></div>
					<div class="glass-overlay"></div>
					<div class="glass-specular-subtle"></div>
					<div class="glass-content glass-content--nav">
						<div class="logo font-bold text-3xl cursor-pointer" id="top-logo">ecoluz</div>
						<div class="nav-links hidden md:block">
							<a href="#producto" class="ml-5 font-medium transition-colors hover:text-[#3498db] cursor-pointer">
								El Producto
							</a>
							<a href="#about" class="ml-5 font-medium transition-colors hover:text-[#3498db] cursor-pointer">
								Nosotros
							</a>
							<a href="#faq" class="ml-5 font-medium transition-colors hover:text-[#3498db] cursor-pointer">
								Preguntas
							</a>
							<a href="#contacto" class="ml-5 font-medium transition-colors hover:text-[#3498db] cursor-pointer">
								Contacto
							</a>
						</div>
						<!-- Arrow indicator for mobile scroll to top -->
						<div id="scroll-chevron" class="md:hidden opacity-0 transition-opacity duration-300">
							<ArrowUp class="w-5 h-5 text-[#3498db]" />
						</div>
					</div>
				</nav>
			</header>

			<main>
				<HeroSection />
				<ProductSection />
				<HowItWorksSection />
				<SpecsSection />
				<AboutSection />
				<TestimonialsSection />
				<FaqSection />
				<ContactSection />
			</main>

			<footer class="text-center py-10 px-5 pb-24 md:pb-10">
				<p>&copy; 2025 Ecoluz. Todos los derechos reservados.</p>
				<p class="footer-info text-sm text-gray-600 mt-2">
					Atención: Lunes a Viernes de 8 a 18 hs, Sábados de 8 a 13 hs. | Envíos a todo el país.
				</p>
			</footer>
		</div>

		<!-- Navegación flotante inferior para mobile -->
		<nav class="fixed bottom-5 left-5 right-5 z-50 md:hidden">
			<div class="glass-container">
				<div class="glass-filter"></div>
				<div class="glass-overlay"></div>
				<div class="glass-specular"></div>
				<div class="glass-content glass-content--mobile-nav">
					<a
						href="#producto"
						class="nav-item flex flex-col items-center p-2 transition-all duration-300 hover:text-[#3498db]"
						data-target="producto"
					>
						<Lightbulb class="w-5 h-5 mb-1" />
						<span class="text-xs font-medium">Producto</span>
					</a>
					<a
						href="#about"
						class="nav-item flex flex-col items-center p-2 transition-all duration-300 hover:text-[#3498db]"
						data-target="about"
					>
						<Building class="w-5 h-5 mb-1" />
						<span class="text-xs font-medium">Empresa</span>
					</a>
					<a
						href="#faq"
						class="nav-item flex flex-col items-center p-2 transition-all duration-300 hover:text-[#3498db]"
						data-target="faq"
					>
						<HelpCircle class="w-5 h-5 mb-1" />
						<span class="text-xs font-medium">FAQ</span>
					</a>
					<a
						href="#contacto"
						class="nav-item flex flex-col items-center p-2 transition-all duration-300 hover:text-[#3498db]"
						data-target="contacto"
					>
						<Mail class="w-5 h-5 mb-1" />
						<span class="text-xs font-medium">Contacto</span>
					</a>
				</div>
			</div>
		</nav>

		<script src="../scripts/main.ts"></script>

		<!-- SVG FILTER DEFINITION for glass effect -->
		<svg style="display: none">
			<filter id="lg-dist" x="0%" y="0%" width="100%" height="100%">
				<feTurbulence type="turbulence" baseFrequency="0.002 0.035" numOctaves="2" seed="42" result="noise"></feTurbulence>
				<feGaussianBlur in="noise" stdDeviation="2" result="blurred"></feGaussianBlur>
				<feDisplacementMap in="SourceGraphic" in2="blurred" scale="45" xChannelSelector="R" yChannelSelector="G"></feDisplacementMap>
			</filter>
		</svg>
	</body>
</html>

